<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true">

        <!-- 定义当button 处于pressed 状态时的形态。-->

        <shape>
            <stroke android:width="1px" android:color="#E6E6E6" />
            <gradient android:startColor="#E6E6E6"
                    android:endColor="#E6E6E6"
                    android:angle="270"/>
            <corners android:bottomLeftRadius="6dp"/>
        </shape>

    </item>

    <item android:state_focused="true">
        <!-- 定义当button获得focus时的形态-->
        <shape>
            <gradient android:startColor="#E6E6E6"
                    android:endColor="#E6E6E6"
                    android:angle="270"/>
            <stroke android:width="1px" android:color="#E6E6E6"/>
            <corners  android:bottomLeftRadius="6dp"/>
        </shape>

    </item>

    <item >
        <!-- 定义当button获得focus时的形态-->
        <shape>
            <gradient android:startColor="@color/white"
                    android:endColor="@color/white"
                    android:angle="270"/>
            <stroke android:width="1px" android:color="@color/white"/>
            <corners  android:bottomLeftRadius="6dp"/>
        </shape>
    </item>
</selector>
