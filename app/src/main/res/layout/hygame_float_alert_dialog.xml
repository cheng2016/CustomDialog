<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/hy_fragment_dialog_bg"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:id="@+id/hy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:text="提示"
        android:textColor="#888888"
        android:textSize="18sp"
        android:visibility="visible"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/hy_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:visibility="visible"
        android:layout_marginRight="20dp"
        android:text="这是一条提示信息"
        android:textColor="#888888"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/hy_cancel_btn"
            android:layout_width="90dp"
            android:layout_height="42dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/hy_dialog_cancel_button_selector"
            android:includeFontPadding="false"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/hy_confirm_btn"
            android:layout_width="90dp"
            android:layout_height="42dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/hy_dialog_confirm_button_selector"
            android:includeFontPadding="false"
            android:text="确认"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>
